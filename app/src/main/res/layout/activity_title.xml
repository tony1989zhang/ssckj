<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title_view_root"
    style="@style/title_bg"
    >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:layout_alignParentBottom="true"
    >
	    <ImageView
	        android:id="@+id/title_back"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:paddingLeft="20dp"
	        android:paddingRight="10dp"
	        android:layout_centerVertical="true"
	        android:visibility="gone"
	        style="@style/title_back"
	        />
	
	    <TextView
	        android:id="@+id/title_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textSize="@dimen/title_text_size"
	        style="@style/title_text"
	        />

	   <TextView
	        android:id="@+id/title_right"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="@dimen/title_right_text_size"
	        android:layout_alignParentRight="true"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip"
	        android:layout_marginRight="10dip"
	        android:gravity="center"
	        android:visibility="gone"
		   style="@style/title_text"
	        />
		<ImageView
			android:id="@+id/title_right_img"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:layout_marginRight="10dip"
			android:gravity="center"
			android:visibility="gone"
			style="@style/title_text"
			/>
	   </RelativeLayout>
</RelativeLayout><!-- From: file:/E:/yvan/OldMan/app/src/main/res/layout/activity_title.xml -->